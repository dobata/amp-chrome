{
  "manifest_version": 2,
  "name": "AMP Accelerated Mobile Page Reader",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "core/config.js",
        "core/helpers.js",
        "core/stateManager.js",
        "core/content.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icons/default.png",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "core/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}